<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <!--<include layout="@layout/appbar"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="1dp"
        android:id="@+id/top_menu"
        >

        <TextView
            android:id="@+id/textSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="Only Bad words"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:paddingTop="10dp"
            android:layout_toLeftOf="@id/buttonPlaySound"

            />
        <Switch
            android:id="@+id/speechCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""

            android:checked="false"
            android:fadeScrollbars="true"
            android:textColor="@color/purple_500"
            android:textOff="No"
            android:textOn="Yes"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:thumbTint="@drawable/switch_color"
            android:trackTint="@color/red"
            android:layout_below="@id/textSwitch"
            android:layout_toLeftOf="@id/buttonPlaySound"
            android:paddingEnd="30dp"
            />

        <Button
            android:id="@+id/buttonPlaySound"

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play_circle"
            android:scaleType="fitCenter"
            android:text=""
             />
        <TextView
            android:id="@+id/textSwitchTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:text="Speak translation"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:paddingTop="10dp"
            android:layout_toRightOf="@id/buttonPlaySound"

            />

        <Switch
            android:id="@+id/speechTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""

            android:checked="true"
            android:fadeScrollbars="true"
            android:textColor="@color/purple_500"
            android:textOff="No"
            android:textOn="Yes"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:thumbTint="@drawable/switch_color"
            android:trackTint="@color/red"

            android:layout_toRightOf="@id/buttonPlaySound"
            android:layout_below="@id/textSwitchTranslate"

            android:paddingStart="10dp"
            />
        <!--app:backgroundTint="@color/green"-->


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_below="@id/top_menu"

        />
</RelativeLayout>