<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Envocab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/main_green</item>
        <!--<item name="android:windowBackground">@drawable/title_background</item>-->
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:itemTextAppearance">@style/ChangeMenu</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/orange</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>
    <style name="ChangeMenu" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="SwitchThemeOverlay" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#CC0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/yellow
        </item>
    </style>
    <style name="SwitchThemeOverlayR" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#CC0000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/green</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/yellow
        </item>
    </style>

    <style name="SwitchThemeOverlay2" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/red_color_font2</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/blue_color2_font2</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/blue_color2_font2
        </item>
    </style>

    <style name="SwitchThemePreference" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_color2_font2</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/main_green</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/yellow
        </item>
    </style>

    <style name="SwitchTimerPreference" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_color2_font2</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/red_color_font2</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/yellow
        </item>
    </style>


    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat</item>
        <item name="boxStrokeColor">@color/colors_border</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>
<!--<item name="hintTextAppearance">@style/TextAppearance.AppCompat</item>-->
    <style name="MyTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>